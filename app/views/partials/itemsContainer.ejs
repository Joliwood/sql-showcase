<body>
  <div class="itemsContainer">
    <% itemsList.forEach(item => { %>
    <article class="card" style="width: 18rem">
      <img
        class="card-img-top"
        src="<%= item.item_picture_url %>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
        <h6><%= item.price %></h6>
        <p class="card-text"><%= item.description %></p>
        <div class="items-container-buttons">
          <a href="#" class="btn btn-primary">Take it !</a>
          <form method="post" action="/deleteArticle">
            <button
              type="submit"
              class="btn btn-danger"
              name="id"
              value="<%= item.id %>"
            >
              X
            </button>
          </form>
        </div>
      </div>
    </article>
    <% }); %>
  </div>
</body>
