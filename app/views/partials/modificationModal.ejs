<button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modificationModal<%= item.id %>" data-bs-whatever="@mdo">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
    <path d="M17.263 2.177a1.75 1.75 0 0 1 2.474 0l2.586 2.586a1.75 1.75 0 0 1 0 2.474L19.53 10.03l-.012.013L8.69 20.378a1.753 1.753 0 0 1-.699.409l-5.523 1.68a.748.748 0 0 1-.747-.188.748.748 0 0 1-.188-.747l1.673-5.5a1.75 1.75 0 0 1 .466-.756L14.476 4.963ZM4.708 16.361a.26.26 0 0 0-.067.108l-1.264 4.154 4.177-1.271a.253.253 0 0 0 .1-.059l10.273-9.806-2.94-2.939-10.279 9.813ZM19 8.44l2.263-2.262a.25.25 0 0 0 0-.354l-2.586-2.586a.25.25 0 0 0-.354 0L16.061 5.5Z"></path>
  </svg>
</button>

<div class="modal fade" id="modificationModal<%= item.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modifier un article</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="post" class="creation-article-form" action="/modifyArticle">
          <div class="row">
            <div class="col">
              <label for="change-title" class="form-label">Titre :</label>
              <input type="text" class="form-control" id="change-title" name="title" value="<%- item.name %>" />
            </div>
            <div class="col">
              <label for="change-price" class="form-label">Prix :</label>
              <input type="text" class="form-control" id="change-price" name="price" value="<%- item.price %>" />
            </div>
          </div>
          <div class="mb-3">
            <label for="change-image" class="form-label">Url de l'image</label>
            <input type="text" class="form-control" id="change-image" name="urlImage" value="<%- item.item_picture_url %>" />
          </div>
          <div class="mb-3">
            <label for="change-text" class="col-form-label">Description :</label>
            <textarea type="text" class="form-control" id="change-text" name="description"><%- item.description %></textarea>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button class="btn btn-primary" type="submit" href="createArticle" name="id" value="<%- item.id %>">Modifier</button>
      </div>
      </form>
    </div>
  </div>
</div>
